    <section class="background-agenda">
      <!-- Coluna Esquerda -->
      <section class="agenda-l">
        <section class="left-top">
          <section class="foto-perfil">
            <img src="imagens/perfil-medico.png" alt="Foto do médico">
          </section>

          <section class="info-perfil">
            <h3>Dr. Cleber J.</h3>
            <p><img src="imagens/star.png" alt="">4,9</p>
            <p><img src="imagens/id.png" alt="">CRM - SP 123456</p>
            <p><img src="imagens/linkedin.png" alt=""><a href="https://linkedin.com/cleberj"
