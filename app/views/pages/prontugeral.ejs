<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/prontuario.css">
    <link rel="stylesheet" href="/css/footer.css">
    <title> InovaCare </title>
</head>

<body>

    <header>
        <nav class="menu desktop">

            <!--barra de navegação-->

            <!--Espaço para a logo-->
            <section class="menu-logo">
                <a href="/index">
                    <img class="logo" src="imagens/logo-bblt.png" alt="Logo InovaCare">
                </a>
            </section>

            <!--Botão de pesquisa-->
            <ul class="menu-list">
                <li class="dropdown">
                    <a class="sobre" href="#">Sobre</a>
                    <div class="dropdown-content">
                        <a href="#">Quem somos</a>
                        <a href="#">Contato</a>
                        <a href="#">FAQ</a>
                <li><a id="areas-link" class="agendamento" href="/especialidades">Agendamento</a></li>
                <li><a class="areas" href="/consultas">Área de consultas</a></li>
            </ul>


            <ul class="menu-list-direita">
                <article class="icon-lupa"><i class="bi bi-search"></i></article>
                <article class="texto-icon"><!--pesquisa--></article>
                <article class="icon-perfil" onclick="toggleProfileMenu()">
                    <i class="bi bi-person-circle"></i>
                    <div id="profile-dropdown" class="profile-dropdown">
                        <a href="/">Sair</a>
                    </div>
                </article>
                <article class="texto-icon"><!--perfil--></article>
            </ul>

            <script>
                function toggleProfileMenu() {
                    const profileDropdown = document.getElementById("profile-dropdown");
                    profileDropdown.style.display = profileDropdown.style.display === "block" ? "none" : "block";
                }

                // Fecha o menu ao clicar fora dele
                window.addEventListener("click", function (event) {
                    const profileDropdown = document.getElementById("profile-dropdown");
                    const iconPerfil = document.querySelector(".icon-perfil");
                    if (!iconPerfil.contains(event.target)) {
                        profileDropdown.style.display = "none";
                    }
                });
            </script>

        </nav>

        <nav class="menu mobile">
            <section class="menu-logo">
                <a href="/index">
                    <img class="logo" src="imagens/logo-extenso.png" alt="Logo InovaCare">
                </a>
                <a href="/index">
                    <img class="logo3" src="imagens/logo-borboleta.png" alt="Logo InovaCare">
                </a>
            </section>

            <ul class="menu-list-direita">
                <article class="icon-lupa"><i class="bi bi-search"></i></article>
                <article class="texto-icon"><!--pesquisa--></article>
                <article class="icon-perfil"><i class="bi bi-person-circle"></i></article>
                <article class="texto-icon"><!--perfil--></article>

                <!-- Botão do menu hambúrguer -->
                <button class="hamburguer" onclick="toggleMenu()">
                    <div class="linha"></div>
                    <div class="linha"></div>
                    <div class="linha"></div>
                </button>

                <!-- Menu suspenso do hambúrguer -->
                <div id="hamburger-menu" class="hamburger-menu-content">
                    <a href="/especialidades">Agendamento</a>
                    <a href="/consultas">Área de consultas</a>
                    <a href="/">Sair</a>
                </div>
            </ul>
        </nav>

        <script>
            function toggleMenu() {
                const menu = document.getElementById("hamburger-menu");
                menu.style.display = menu.style.display === "block" ? "none" : "block";
            }
        </script>

    </header>

    <main>
