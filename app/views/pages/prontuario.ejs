        <span>Clique aqui para baixar os modelos que serão anexados</span>
      </section>

    <section class="actions">
    <label for="receita" class="input-label">Anexar Receita Médica</label>
    <input type="file" id="receita" name="receita" class="input-file" accept="application/pdf" />

    <figure id="preview-receita" style="display:none; margin-top:8px;">
        <figcaption id="caption-receita"></figcaption>
    </figure>

    <label for="pedido-exame" class="input-label">Anexar pedido de exame</label>
    <input type="file" id="pedido-exame" name="pedido-exame" class="input-file" accept="application/pdf" />

    <figure id="preview-exame" style="display:none; margin-top:8px;">
        <figcaption id="caption-exame"></figcaption>
    </figure>
    </section>

    <script>
    document.getElementById('receita').addEventListener('change', function(event) {
    const file = event.target.files[0];
    const preview = document.getElementById('preview-receita');
    const caption = document.getElementById('caption-receita');
    if (file) {
        preview.style.display = 'block';
        caption.textContent = file.name + (file.type === 'application/pdf' ? ' (PDF selecionado)' : '');
    } else {
        preview.style.display = 'none';
        caption.textContent = '';
    }
    });
    document.getElementById('pedido-exame').addEventListener('change', function(event) {
    const file = event.target.files[0];
    const preview = document.getElementById('preview-exame');
    const caption = document.getElementById('caption-exame');
    if (file) {
        preview.style.display = 'block';
        caption.textContent = file.name + (file.type === 'application/pdf' ? ' (PDF selecionado)' : '');
    } else {
        preview.style.display = 'none';
        caption.textContent = '';
    }
    });
    </script>

    </section>
