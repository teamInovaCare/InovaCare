    <!-- SDK do Mercado Pago -->
    <script src="https://sdk.mercadopago.com/js/v2"></script>

    <script>
        // Inicializa o SDK com sua Public Key do Mercado Pago
        const mercadopago = new MercadoPago("<%= process.env.MERCADO_PAGO_PUBLIC_KEY || 'APP_USR-a8d57d8e-539f-4767-bca4-774508d1bf4c' %>", { locale: "pt-BR" });

        // Seleciona o formulário e o botão de confirmação do modal
        const formAgendamento = document.getElementById("form-agendamento");
        const btnConfirmar = document.querySelector(".btn-confirmar-modal");

        btnConfirmar.addEventListener("click", async (event) => {
            // Impede o envio automático do formulário (POST padrãoo)
            event.preventDefault();

            // Captura os dados do formulário/modal
            const medico = document.getElementById("input-medico").value || "Consulta Online";
            const data = document.getElementById("input-data").value;
            const horario = document.getElementById("input-horario").value;
            const preco = parseFloat(document.getElementById("input-preco").value) || 1.00;

            if (!data || !horario) {
                alert("Selecione a data e o horário antes de confirmar!");
                return;
            }

            // Cria o objeto com os dados do pagamento
            const dadosPagamento = {
                title: `${medico} - ${data} às ${horario}`,
                price: preco,
            };

            try {
                // Faz a requisição ao backend para criar a preferência de pagamento
                const response = await fetch("/create-preference", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(dadosPagamento),
                });

                const dataResponse = await response.json();

                if (dataResponse.id) {
                    // Abre o Checkout Pro do Mercado Pago
                    mercadopago.checkout({
                        preference: { id: dataResponse.id },
                        autoOpen: true,
                    });

                } else {
                    alert("Erro ao criar pagamento. Tente novamente.");
                }
            } catch (error) {
                console.error("Erro ao conectar com o servidor:", error);
                alert("Não foi possível iniciar o pagamento.");
            }
        });
    </script>


